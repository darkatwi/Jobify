{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=JobifyDB;Trusted_Connection=True;"
  },

  "Jwt": {
    "Issuer": "Jobify.Api",
    "Audience": "Jobify.Client",
    "Key": "REPLACE_WITH_SECRET_KEY",
    "ExpiresMinutes": 60
  },

  "Authentication": {
    "Google": {
      "ClientId": "GOOGLE_CLIENT_ID",
      "ClientSecret": "GOOGLE_CLIENT_SECRET"
    },
    "GitHub": {
      "ClientId": "GITHUB_CLIENT_ID",
      "ClientSecret": "GITHUB_CLIENT_SECRET"
    }
  },

  "Smtp": {
    "Host": "smtp.gmail.com",
    "Port": 587,
    "User": "your-email@gmail.com",
    "Pass": "YOUR_APP_PASSWORD",
    "From": "Jobify Support <your-email@gmail.com>"
  },

  "Frontend": {
    "BaseUrl": "https://localhost:63303"
  }
}
